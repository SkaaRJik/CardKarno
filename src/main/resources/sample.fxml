<VBox prefHeight="175.0" prefWidth="336.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.Controller">
   <children>
      <HBox>
         <children>
            <Label text="Количество переменных">
               <padding>
                  <Insets right="5.0" top="5.0" />
               </padding>
            </Label>
            <ChoiceBox fx:id="countChooseBox" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <TitledPane animated="false" text="Таблица истинности">
        <content>
          <AnchorPane fx:id="gridContainer" />
        </content>
      </TitledPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <Button mnemonicParsing="false" onAction="#solute" text="Рассчет" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <TitledPane animated="false" text="untitled">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </TitledPane>
   </children>
</VBox>
